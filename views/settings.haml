%link(rel="stylesheet" href="/plugin/lokka-image_manager/assets/stylesheets/style.css" type="text/css")
%script(src="/plugin/lokka-image_manager/assets/javascripts/script.js" type="text/javascript")

%h2=t('image_manager.settings.choose_service')

#image-uploader-wrap.clearfix
  #image-uploader-aside
    %h3= link_to t('image_manager.link.image_manager'), "/admin/plugins/image_manager"
    %h3= link_to t("image_manager.link.thumbnail"), "/admin/plugins/image_manager/thumbnail"
    %h3= t("image_manager.link.settings")

  #image-uploader-content
    %table
      %tr
        %th= t('image_manager.settings.service')
        %th
          - services.each do |service|
            %tr
              %td= t("image_manager.#{service}.name")
              %td= link_to t('image_manager.settings.account_register'), "/admin/plugins/image_manager/settings/#{service}", :class => 'button'
